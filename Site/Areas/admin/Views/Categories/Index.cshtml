@model IEnumerable<Model.Category>

@{
    ViewBag.Title = "Index";
}
@section scripts{
    <script src="~/Scripts/CustomJs/Categories.js"></script>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="categorytable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <img src="@item.ImageAddress" style="width:210px;height:160px;" alt="" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @* @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                <button onclick='deletecategory(@item.Id)'>حذف</button>


            </td>
        </tr>
    }

</table>
